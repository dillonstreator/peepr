    "cls-rtracer": "^1.4.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "socket.io": "^2.3.0",
    "unique-names-generator": "^4.2.0",
    "uuid": "^7.0.3"
  }
